<div class="page-header">
  <h1 class="page-title">Repositories</h1>
  <%= link_to 'New Repository', new_repository_path, class: 'btn btn--primary' %>
</div>

<div class="card">
  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>URL</th>
          <th class="w-48">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @repositories.each do |repository| %>
          <tr>
            <td class="font-medium"><%= repository.url %></td>
            <td>
              <div class="actions">
                <%= link_to 'View', repository_path(repository), class: 'btn-action' %>
                <%= link_to 'Edit', edit_repository_path(repository), class: 'btn-action' %>
                <%= link_to 'Delete', repository,
                    class: 'btn-action btn-action--danger',
                    data: {
                      turbo_confirm: 'Are you sure you want to delete this repository?',
                      turbo_method: 'delete'
                    } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
