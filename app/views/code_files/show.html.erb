<div class="page-header">
  <div>
    <h1 class="page-title mb-2"><%= @code_file.path %></h1>
    <p class="text-subtle">
      Repository: <%= link_to @repository.url, repository_path(@repository), class: 'text-primary hover:underline' %>
    </p>
  </div>
  <div class="flex gap-4">
    <%= link_to 'View on Repository', @code_file.url, class: 'btn btn--primary', target: '_blank' %>
    <%= link_to 'Back to Files', repository_code_files_path(@repository), class: 'btn' %>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
  <div class="card">
    <div class="card-body">
      <h3 class="text-sm font-medium text-subtle mb-1">Overall Score</h3>
      <p class="text-2xl font-semibold"><%= number_with_precision(@code_file.overall_grade, precision: 1) %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h3 class="text-sm font-medium text-subtle mb-1">Security Score</h3>
      <p class="text-2xl font-semibold"><%= number_with_precision(@code_file.security_grade, precision: 1) %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h3 class="text-sm font-medium text-subtle mb-1">Performance Score</h3>
      <p class="text-2xl font-semibold"><%= number_with_precision(@code_file.performance_grade, precision: 1) %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h3 class="text-sm font-medium text-subtle mb-1">Refactoring Score</h3>
      <p class="text-2xl font-semibold"><%= number_with_precision(@code_file.refactoring_grade, precision: 1) %></p>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <div class="space-y-6">
    <div class="card">
      <div class="card-header">
        <h2 class="text-lg font-medium">Overall Review</h2>
      </div>
      <div class="card-body">
        <p class="whitespace-pre-wrap"><%= @code_file.overall_review %></p>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 class="text-lg font-medium">Security Review</h2>
      </div>
      <div class="card-body">
        <p class="whitespace-pre-wrap"><%= @code_file.security_review %></p>
      </div>
    </div>
  </div>

  <div class="space-y-6">
    <div class="card">
      <div class="card-header">
        <h2 class="text-lg font-medium">Performance Review</h2>
      </div>
      <div class="card-body">
        <p class="whitespace-pre-wrap"><%= @code_file.performance_review %></p>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 class="text-lg font-medium">Refactoring Review</h2>
      </div>
      <div class="card-body">
        <p class="whitespace-pre-wrap"><%= @code_file.refactoring_review %></p>
      </div>
    </div>
  </div>
</div>

<div class="card mt-6">
  <div class="card-header flex items-center justify-between">
    <h2 class="text-lg font-medium">File Information</h2>
  </div>
  <div class="card-body space-y-2">
    <p class="text-sm">
      <span class="text-subtle">Last Synced:</span>
      <span class="font-medium"><%= @code_file.sync_at&.strftime("%Y-%m-%d %H:%M:%S") %></span>
    </p>
    <p class="text-sm">
      <span class="text-subtle">Created:</span>
      <span class="font-medium"><%= @code_file.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
    </p>
    <p class="text-sm">
      <span class="text-subtle">Updated:</span>
      <span class="font-medium"><%= @code_file.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
    </p>
  </div>
</div>

<style>
.file-info {
    margin-bottom: 30px;
}

.grades {
    margin-bottom: 30px;
}

.grade-item {
    margin-bottom: 20px;
    padding: 15px;
    background-color: #f5f5f5;
    border-radius: 5px;
}

.review {
    margin-top: 10px;
    white-space: break-spaces;
}

.code-content {
    margin-bottom: 30px;
}

pre {
    background-color: #f8f8f8;
    padding: 15px;
    border-radius: 5px;
    overflow-x: auto;
}

.metadata {
    color: #666;
    font-size: 0.9em;
}

.back-link {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
}

.back-link:hover {
    background-color: #0056b3;
}
</style>
